<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mmakg.hesap_makinesi.DecimalCalculateFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="36sp"
        tools:maxLength="18" />

    <Button
        android:id="@+id/sayi_temizle"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/display"
        android:text="AC"
        android:textSize="30sp" />

    <Button
        android:id="@+id/sayi_sil"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_below="@+id/display"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/bolum"
        android:layout_toStartOf="@+id/bolum"
        android:text="←"
        android:textSize="30sp" />

    <Button
        android:id="@+id/bolum"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/display"
        android:text="÷"
        android:textSize="36sp" />

    <Button
        android:id="@+id/sayi7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sayi_temizle"
        android:text="7"
        android:textSize="30sp" />

    <Button
        android:id="@+id/sayi8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/sayi_temizle1"
        android:layout_alignStart="@+id/sayi_temizle1"
        android:layout_below="@+id/sayi_temizle1"
        android:text="8"
        android:textSize="30sp" />

    <Button
        android:id="@+id/sayi9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/sayi_sil"
        android:layout_alignStart="@+id/sayi_sil"
        android:layout_below="@+id/sayi_sil"
        android:text="9"
        android:textSize="30sp" />

    <Button
        android:id="@+id/sayi_temizle1"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_below="@+id/display"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/sayi_temizle"
        android:layout_toRightOf="@+id/sayi_temizle"
        android:text="C"
        android:textSize="30sp" />

    <Button
        android:id="@+id/carpim"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/bolum"
        android:layout_alignStart="@+id/bolum"
        android:layout_below="@+id/bolum"
        android:text="X"
        android:textSize="36sp" />

    <Button
        android:id="@+id/sayi4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sayi7"
        android:text="4"
        android:textSize="30sp" />

    <Button
        android:id="@+id/sayi5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/sayi8"
        android:layout_alignStart="@+id/sayi8"
        android:layout_below="@+id/sayi8"
        android:text="5"
        android:textSize="30sp" />

    <Button
        android:id="@+id/sayi6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/sayi9"
        android:layout_alignStart="@+id/sayi9"
        android:layout_below="@+id/sayi9"
        android:text="6"
        android:textSize="30sp" />

    <Button
        android:id="@+id/cikarma"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/carpim"
        android:layout_alignStart="@+id/carpim"
        android:layout_below="@+id/carpim"
        android:text="-"
        android:textSize="36sp" />

    <Button
        android:id="@+id/sayi1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sayi6"
        android:text="1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/sayi2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/sayi5"
        android:layout_alignStart="@+id/sayi5"
        android:layout_below="@+id/sayi5"
        android:text="2"
        android:textSize="30sp" />

    <Button
        android:id="@+id/sayi3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/sayi6"
        android:layout_alignStart="@+id/sayi6"
        android:layout_below="@+id/sayi6"
        android:text="3"
        android:textSize="30sp" />

    <Button
        android:id="@+id/topla"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/cikarma"
        android:text="+"
        android:textSize="36sp" />

    <Button
        android:id="@+id/sayi_negatif"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sayi1"
        android:text="±"
        android:textSize="30sp" />

    <Button
        android:id="@+id/sayi0"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/sayi2"
        android:layout_alignStart="@+id/sayi2"
        android:layout_below="@+id/sayi2"
        android:text="0"
        android:textSize="30sp" />

    <Button
        android:id="@+id/virgul"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/sayi3"
        android:layout_alignStart="@+id/sayi3"
        android:layout_below="@+id/sayi3"
        android:text=","
        android:textSize="30sp" />

    <Button
        android:id="@+id/hesapla"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/topla"
        android:text="="
        android:textSize="36sp" />

    <Button
        android:id="@+id/sayi_yuzde"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sayi_negatif"
        android:text="%"
        android:textSize="30sp" />

    <Button
        android:id="@+id/sayi_kok"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/sayi0"
        android:layout_alignStart="@+id/sayi0"
        android:layout_below="@+id/sayi0"
        android:text="√"
        android:textSize="30sp" />

    <Button
        android:id="@+id/sayi_kare"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/virgul"
        android:layout_alignStart="@+id/virgul"
        android:layout_below="@+id/virgul"
        android:text="x²"
        android:textAllCaps="false"
        android:textSize="30sp" />

    <Button
        android:id="@+id/sayi_tersi"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/hesapla"
        android:text="1/x"
        android:textAllCaps="false"
        android:textSize="30sp" />

</RelativeLayout>
