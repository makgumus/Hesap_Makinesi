<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.mmakg.hesap_makinesi.MainActivity">

    <include
        layout="@layout/content_main"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkBoxHex" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:expanded="true" />

    <CheckBox
        android:id="@+id/checkBoxHex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_toEndOf="@+id/checkBoxAci"
        android:layout_toRightOf="@+id/checkBoxAci"
        android:text="Hexadecimal"
        android:textSize="18sp"
        android:textStyle="italic" />

    <CheckBox
        android:id="@+id/checkBoxAci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/kare"
        android:layout_alignBottom="@+id/kare"
        android:layout_toEndOf="@+id/kare"
        android:layout_toRightOf="@+id/kare"
        android:text="Functions"
        android:textSize="18sp"
        android:textStyle="italic"
        android:visibility="visible" />
    />

</RelativeLayout>

